<h1>Editing time window</h1>

<% form_for(@time_window) do |f| %>
  <%= f.error_messages %>
  <table>
    <tr><th><%= f.label :description %><td><%= f.text_field :description %></tr>
    <tr><th><%= f.label :definition %><td><%= f.text_field :definition %></tr>
    <tr><th><%= f.label :active %><td><%= f.check_box :active %></tr>
  </table>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<p class="navigation">
<%= link_to 'Show', @time_window %> |
<%= link_to 'Back', time_windows_path %>
</p>
