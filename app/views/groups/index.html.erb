<h1>Listing groups</h1>

<table>
  <tr><th>Name<th>Description<th>Enabled<th>Options
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= link_to group.name, group %><br/>
    <td><%= group.description %><br/>
    <td><%= group.enabled ? 'Yes' : 'No' %><br/>
    <td><%= link_to 'Edit', edit_group_path(group) %> |
    <%= link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p class="navigation">
<%= link_to 'New group', new_group_path %>
</p>